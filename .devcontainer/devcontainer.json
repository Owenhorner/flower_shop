{
    "name": "Flower Shop",
    "image": "mcr.microsoft.com/devcontainers/base:latest",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            },
            "extensions": [
                "shopify.ruby-lsp"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/ruby:latest": {}
    },
    "postCreateCommand": "bundle install && bundle exec rspec"
}